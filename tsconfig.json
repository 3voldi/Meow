{
  "ts-node": {
    "transpileOnly": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "./dist-commandfiles",
    "rootDir": "./",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2024",
    "lib": ["ES2024"],
    "types": ["node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": false,
    "strictNullChecks": false,
    "paths": {
      "@cassidy/unispectra": ["./CommandFiles/modules/unisym"],
      "@cassidy/spectral-home": ["./CommandFiles/modules/spectralCMDHome"],
      "@cassidy/redux-home": ["./CommandFiles/modules/reduxCMDHome"],
      "@cassidy/ut-shop": ["./CommandFiles/plugins/ut-shop.js"],
      "@cassidy/utils": ["./utils-path"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*"]
}
